<?xml version="1.0" encoding="utf-8"?>
<com.facebook.ads.NativeAdLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_side_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/ad_image_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#33000000"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:text="AD"
                    android:textColor="@color/white"
                    android:textSize="@dimen/f16sp" />

                <LinearLayout
                    android:id="@+id/ad_choices_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/native_ad_close"
                    android:layout_width="@dimen/h60dp"
                    android:layout_height="@dimen/h60dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/h5dp"
                    android:padding="@dimen/h15dp"
                    android:src="@drawable/ad_close"
                    android:visibility="visible" />

            </FrameLayout>

            <com.facebook.ads.MediaView
                android:id="@+id/native_ad_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:id="@+id/native_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/w40dp"
                android:layout_marginRight="@dimen/w40dp"
                android:layout_marginTop="@dimen/h10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f18sp"
                android:textStyle="bold" />

            <com.facebook.ads.AdIconView
                android:id="@+id/native_ad_icon"
                android:layout_width="@dimen/h60dp"
                android:layout_height="@dimen/h60dp"
                android:layout_marginTop="@dimen/h20dp" />

            <TextView
                android:id="@+id/native_ad_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/w40dp"
                android:layout_marginRight="@dimen/w40dp"
                android:layout_marginTop="@dimen/h15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f14sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/native_ad_call_to_action"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/h30dp"
                    android:layout_marginLeft="@dimen/w30dp"
                    android:layout_marginRight="@dimen/w30dp"
                    android:background="#b63de3"
                    android:text="INSTALL NOW"
                    android:textColor="@color/white"
                    android:textSize="@dimen/f16sp"
                    android:visibility="visible" />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</com.facebook.ads.NativeAdLayout>